<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.fivethings.MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/topic"
        android:id="@+id/topic1"
        android:textSize="16sp"
        android:textIsSelectable="false"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ohm_law"
        android:id="@+id/ohm_law_button"
        android:layout_marginTop="44dp"
        android:onClick="showOhmLaw"
        android:layout_gravity="center_horizontal" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/voltage_divider"
        android:id="@+id/voltage_divider_button"
        android:layout_marginTop="44dp"
        android:onClick="showVoltageDivider"
        android:layout_gravity="center_horizontal" />
</LinearLayout>
